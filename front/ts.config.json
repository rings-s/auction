{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": false,
		"moduleResolution": "bundler",
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022", "DOM"]
	},
	"include": ["src/**/*"]
}
